<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_v_error"
    style="@style/NearTheme.CommonBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    tools:visibility="gone">

    <TextView
        android:id="@+id/common_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_s15"
        android:layout_marginRight="@dimen/spacing_s15"
        android:drawablePadding="30dp"
        android:drawableTop="@drawable/img_empty"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="@dimen/common_line_space_multiplier"
        android:text="@string/net_error_data"
        android:textColor="@color/palette_gray"
        android:textSize="@dimen/typography_f17" />
</LinearLayout>