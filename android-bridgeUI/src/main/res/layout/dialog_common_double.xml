<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_solid"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <me.yamlee.bridge.ui.view.BoldTextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textColor="@color/palette_black"
        android:textSize="@dimen/typography_f18"
        tools:text="标题" />

    <TextView
        android:id="@+id/dialog_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_tv_title"
        android:layout_marginTop="25dp"
        android:textColor="@color/palette_black_light"
        android:textSize="@dimen/typography_f15"
        tools:text="内容内容内容内容内容内容内容内容内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/dialog_tv_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/dialog_tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_orange_corner_edge"
            android:gravity="center"
            android:textColor="@color/palette_orange"
            android:textSize="@dimen/typography_f17"
            tools:text="取消" />

        <TextView
            android:id="@+id/dialog_tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_orange_corner_solid"
            android:gravity="center"
            android:textColor="@color/palette_white"
            android:textSize="@dimen/typography_f17"
            tools:text="确定" />
    </LinearLayout>
</RelativeLayout>