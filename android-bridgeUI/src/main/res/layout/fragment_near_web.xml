<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <me.yamlee.bridge.ui.view.WebHeaderView
            android:id="@+id/v_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layoutStyle="leftLayout" />

        <ProgressBar
            android:id="@+id/pb_web_view"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:progressDrawable="@drawable/progress_webview_load"
            android:visibility="gone"
            tools:progress="50" />

        <FrameLayout
            android:id="@+id/ll_web_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <me.yamlee.bridge.ui.view.BridgeWebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


    </LinearLayout>

</FrameLayout>