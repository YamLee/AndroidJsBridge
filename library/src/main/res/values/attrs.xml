<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float" />
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="maxHeightView">
        <attr name="maxHeightRatio" format="reference|float" />
        <attr name="maxHeightDimen" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="cornerRadius" format="dimension" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowColor" format="color" />
        <attr name="dx" format="dimension" />
        <attr name="dy" format="dimension" />
    </declare-styleable>
</resources>