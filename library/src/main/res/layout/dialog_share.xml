<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f4f4f4"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_share_weixin_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_weixin"
            android:drawablePadding="7dp"
            android:text="@string/share_tv_wx_friend"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_share_weixin_moments"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_moments"
            android:drawablePadding="7dp"
            android:text="@string/share_tv_wx_moments"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_share_sina_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_weibo"
            android:drawablePadding="7dp"
            android:text="@string/text_share_sina_weibo"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            android:visibility="gone"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_share_qq_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_qq"
            android:drawablePadding="7dp"
            android:text="@string/share_tv_qq_friend"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_share_qq_zone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_qqspace"
            android:drawablePadding="7dp"
            android:text="@string/share_tv_qq_zone"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_share_copy_link"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_share_copy_like"
            android:drawablePadding="7dp"
            android:text="@string/share_tv_copy_link"
            style="@style/Text.black_light.f6"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/palette_white"
        android:layout_marginTop="15dp"
        android:text="@string/share_tv_cancel"
        android:gravity="center"
        style="@style/Text.black_light.f2"
        />
</LinearLayout>