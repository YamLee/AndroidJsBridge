<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_solid"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <in.haojin.nearbymerchant.widget.BoldTextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textColor="@color/palette_black"
        android:textSize="@dimen/typography_f18"
        tools:text="标题" />

    <TextView
        android:id="@+id/dialog_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_tv_title"
        android:layout_marginTop="25dp"
        android:textColor="@color/palette_black"
        android:textSize="@dimen/typography_f15"
        tools:text="内容内容内容内容内容内容内容内容内容" />

    <TextView
        android:id="@+id/dialog_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/dialog_tv_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@drawable/shape_orange_corner_solid"
        android:gravity="center"
        android:textColor="@color/palette_white"
        android:textSize="@dimen/typography_f17"
        tools:text="确定" />
</RelativeLayout>