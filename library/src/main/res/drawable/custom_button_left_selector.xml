<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <solid android:color="@color/palette_black_20"/>

            <corners
                android:radius="3dp"/>

            <stroke
                android:width="1.0dp"
                android:color="@color/palette_orange_dark"/>

        </shape>
    </item>
    <item android:state_selected="true">
        <shape>

            <solid android:color="@color/palette_black_20"/>

            <corners
                android:radius="3dp"/>

            <stroke
                android:width="1.0dp"
                android:color="@color/palette_orange_dark"/>

        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>

            <solid android:color="@color/palette_transparent"/>

            <corners
                android:radius="3dp"/>
            <stroke
                android:width="1.0dp"
                android:color="@color/palette_orange"/>

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>

            <solid android:color="@color/palette_black_20"/>

            <corners
                android:radius="3dp"/>

            <stroke
                android:width="1.0dp"
                android:color="#aaadb5"/>

        </shape>
    </item>

</selector>